pipeline {

    environment {
     GITHUB_API_URL='https://api.github.com/repos/kevinmenotyou/devops_assignment2'
    }
  
    agent {
        node {
            label 'test-jenkins-agent1'
        }
    }

    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }


    stages {
        stage('Diagram') {
			when {
				allOf {
					changeset "diagram/*"
				}
			}
			steps {
				echo 'Building Diagram..'
				sh 'pip3 install diagrams'
				sh 'python3 diagram/diagram.py'
				sh """ 
					export GIT_COMMITTER_NAME=SVC_AZUREUSER_ROBOT
					export GIT_COMMITTER_EMAIL=fake@fakeemail.com
					git add output
					git commit -m '[robot] Submit updated diagram from build machine'
					git push origin HEAD
				"""
			}
        }
    }
}